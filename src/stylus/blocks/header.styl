.header-wrapper {
    background url('../images/header-bg.jpg')
}

.header-inner-wrapper {
    background rgba(105, 97, 127, .8)
}

.header {
    max-width 1260px
    margin 0 auto
    
    &__menu {
        padding 45px
        
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.15);
        
        position relative
        
        &:after {
            content ''
            display block
            clear both
        }
        
        .logo {
            float left
            
            font 16px font-bold
            color #fefefe
            
            text-transform uppercase
            text-decoration none
        }
        
        .nav {
            float right
            
            a {
                display inline-block
                height 19px
                line-height 19px
                                
                color #fff
                font-size  13px 
                
                text-transform uppercase
                text-decoration none
                opacity 0.75
                
                &:hover {
                    border-bottom 3px solid #7851a9
                    opacity 1
                }
                
                @media(min-width: 621px) {
                    margin-left 30px
                    
                }
            }
        }
    }
    
    &__intro {
        padding 100px 20px
        
        text-align center
        
        h1 {
            font 60px font-regular 
            color #fff
            
            text-transform uppercase
            text-shadow 1px 1px rgba(255,255,255,.7)
        }
        
        p {
            margin 40px 0 55px
            
            font-size  30px
            color #fff
        }
        
        .btn-download {
            btn-download(16px, 40px, #7851a9, 0.85, 2px, 0 3px 0 rgba(0,0,0,0.1), 15px, font-regular, #fff, uppercase, none)
                        
            &:hover {
                opacity 1
            }
            
            &:active {
                box-shadow none
                
                position relative
                top 2px
            }
        }
    }
    
}

@media (max-width: 620px) {
    
    .header__intro {
        padding 40px 20px 60px
        
        h1 {
            font-size 40px
        }
    }
    
    .toggler {
        position: absolute;
        z-index: 1;
        top: 30px;
        right: 40px;
        display: flex;
        align-items: center;
        width: 3em;
        height: 3em;
        line-height: 3em;
        user-select: none;
  
        span {
          display: inline-block;
          vertical-align: bottom;
          width: 100%;
          height: .3rem;
          background: #fff;
          border-radius: .2rem;
          position: relative;
          transition: background .3s .5s;
          
          &:before,
          &:after {
            width: 100%;
            height: .3rem;
            background: #fff;
            border-radius: .2rem;
            position: absolute;
            left: 0;
            content: '';
            transform-origin: 50% 50%;
            transition: top .3s .6s, transform .3s;
          }
          
          &:before {
            top: 1rem;
          }
          
          &:after {
            top: -1rem;
          }
        }
        
        &--close {
          > span {
            transition: background .3s 0;
            background: transparent;
            
            &:before,
            &:after {
              transition: top .3s, transform .3s .5s;
              top: 0;
            }
            
            &:before {
              transform: rotate3d(0, 0, 1, 45deg);
            }
            
            &:after {
              transform: rotate3d(0, 0, 1, -45deg);
            }
          }
        }
    }
    
    .nav {
        display block
        width 100%
                        
        position relative
        top 20px
                       
        max-height 0
        overflow hidden
        transition max-height 1s ease-in-out
                
        &--visible {
            max-height 180px
            
        }
                
        a {
            width 100%
            
            padding-top 10px
            padding-bottom  25px 
            
            font-size 22px        
            
            text-align center
            
            background-color rgba(120, 81, 169,.6)
            
            border-bottom 1px solid rgba(141, 96, 196, 1)
                       
        }
    }
    
}